<?xml version="1.0" encoding="utf-8"?>
<com.wsy.ahp.activity.scroll.view.WsyNestedScrollLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nested_scroll_view"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.wsy.common.ui.view.IconFontTextView
            android:id="@+id/search_container"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:background="@drawable/shape_home_search"
            android:layout_height="@dimen/dp_35"
            android:gravity="center"
            android:text="@string/home_search_hint"
            android:textColor="@color/color_9fa"
            android:textSize="14sp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/default_photo"
            android:scaleType="centerCrop"
            />


        <LinearLayout
            android:id="@+id/tab_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/video_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/tab_name" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>


</com.wsy.ahp.activity.scroll.view.WsyNestedScrollLayout>
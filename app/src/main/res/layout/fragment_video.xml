<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.nowarticle.VideoFragment">
    <!-- TabLayout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/video_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabRippleColor="#F5F5F5"
        app:tabIndicatorFullWidth="false"
        app:tabMaxWidth="@dimen/dp_60"
        app:tabMode="scrollable"
        app:tabTextColor="#424242"
        app:tabSelectedTextColor="@color/colorAccent"
    />

<androidx.viewpager2.widget.ViewPager2
    android:id="@+id/video_vp"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/video_tab_layout">

</androidx.viewpager2.widget.ViewPager2>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.nowarticle.MiniVideoFragment">

    <LinearLayout
        android:id="@+id/rl_tab_title"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        >
        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/stl_tab_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:tl_indicator_gravity="TOP"
            app:tl_textsize="@dimen/dp_14"
            app:tl_indicator_height="0dp"
            app:tl_indicator_style="BLOCK"
            app:tl_tab_padding="@dimen/dp_15"
            app:tl_textBold="SELECT"
            app:tl_textUnselectColor="@color/black"
            app:tl_textSelectColor="@color/color_298"
            android:layout_weight="5"
            />
        <ImageView
            android:id="@+id/video_search"
            android:src="@mipmap/search"
            android:layout_gravity="center"
            android:padding="10dip"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/setting"
            />
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_min"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/rl_tab_title"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
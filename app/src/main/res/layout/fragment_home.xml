<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MyFragment"
        android:textSize="40sp"
        android:gravity="center_horizontal"/>



        <Button
            android:id="@+id/mybutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="hiTop"/>

    <Button
        android:id="@+id/hiRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="hiRefresh"/>

    <Button
        android:id="@+id/hiBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="hiBanner"/>

    <Button
        android:id="@+id/jetpackCompose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="jetpackCompose"/>

    <Button
        android:id="@+id/kotlinExtension"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="kotlinExtension"/>


</LinearLayout >
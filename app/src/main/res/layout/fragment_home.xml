<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

   <com.wsy.common.ui.view.IconFontTextView
       android:id="@+id/search_container"
       android:layout_marginLeft="@dimen/dp_16"
       android:layout_marginTop="@dimen/dp_5"
       android:layout_marginRight="@dimen/dp_16"
       android:layout_marginBottom="@dimen/dp_10"
       android:layout_width="match_parent"
       android:background="@drawable/shape_home_search"
       android:layout_height="@dimen/dp_35"
       android:gravity="center"
       android:text="@string/home_search_hint"
       android:textColor="@color/color_9fa"
       android:textSize="14sp"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
      <GridLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:columnCount="4"
          >


         <androidx.appcompat.widget.AppCompatTextView
             android:layout_marginLeft="@dimen/dp_20"
             android:layout_marginRight="@dimen/dp_20"
             android:layout_width="0dp"
             android:background="@drawable/shape_home_grid"
             android:drawableTop="@drawable/guan"
             android:gravity="center_horizontal"
             android:text="官媒荟萃"
             android:layout_columnWeight="1" />

         <androidx.appcompat.widget.AppCompatTextView
             android:layout_width="0dp"
             android:layout_marginRight="@dimen/dp_20"
             android:background="@drawable/shape_home_grid"
             android:drawableTop="@drawable/test"
             android:gravity="center_horizontal"
             android:text="检测标准"
             android:layout_columnWeight="1" />

         <androidx.appcompat.widget.AppCompatTextView
             android:layout_width="0dp"
             android:layout_marginRight="@dimen/dp_20"
             android:background="@drawable/shape_home_grid"
             android:drawableTop="@drawable/icon_case"
             android:gravity="center_horizontal"
             android:text="精品案例"
             android:layout_columnWeight="1" />
         <androidx.appcompat.widget.AppCompatTextView
             android:layout_width="0dp"
             android:layout_marginRight="@dimen/dp_20"
             android:background="@drawable/shape_home_grid"
             android:drawableTop="@drawable/answer"
             android:gravity="center_horizontal"
             android:text="答题巩固"
             android:layout_columnWeight="1" />

      </GridLayout>


   </LinearLayout>

   <com.wsy.ui.tab.top.HiTabTopLayout
       android:id="@+id/tab_top_layout"
       android:layout_width="match_parent"
       android:layout_marginLeft="@dimen/dp_16"
       android:layout_marginRight="@dimen/dp_16"
       android:layout_marginBottom="@dimen/dp_10"
       android:background="@color/color_white"
       android:layout_height="@dimen/dp_45" />

   <androidx.viewpager.widget.ViewPager
       android:id="@+id/view_pager"
       android:layout_width="match_parent"
       android:layout_height="match_parent" />



</LinearLayout>
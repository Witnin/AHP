<resources>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        # 启动画面的背景，默认使用 windowBackground
        <item name="windowSplashScreenBackground">@color/white</item>
        # 指定 icon，支持静态 drawable 或动画 vector drawable
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        # 动画 icon 时长，上限 1000 ms
        <item name="windowSplashScreenAnimationDuration">500</item>
        # 启动画面退出后 Activity 的主题
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        # 设置图标北京颜色，本例中图标是不透明的，所以看不到效果
        <item name="windowSplashScreenIconBackgroundColor">#f00</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_298</item>
        <item name="colorPrimaryDark">@color/color_298</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--    <attr name="hintColor" format="color"></attr>
            <attr name="inputColor" format="color"></attr>
            <attr name="textSize" format="dimension"></attr>-->
    <style name="inputTextAppearance">
        <item name="hintColor">@color/color_C1B</item>
        <item name="inputColor">@color/color_565</item>
        <item name="textSize">15sp</item>
    </style>


    <style name="titleTextAppearance">
        <item name="titleColor">@color/color_565</item>
        <item name="titleSize">15sp</item>
        <item name="minWidth">100dp</item>
    </style>

    <!--       <attr name="color" format="color"></attr>
            <attr name="height" format="dimension"></attr>
            <attr name="leftMargin" format="dimension"></attr>
            <attr name="rightMargin" format="dimension"></attr>
            <attr name="enable" format="boolean"></attr>-->

    <style name="lineAppearance">
        <item name="color">@color/color_C1B</item>
        <item name="height">0.5dp</item>
        <item name="leftMargin">0dp</item>
        <item name="rightMargin">0dp</item>
        <item name="enable">true</item>
    </style>


    <style name="leftMargin_lineAppearance" parent="lineAppearance">
        <item name="leftMargin">10dp</item>
    </style>
</resources>
